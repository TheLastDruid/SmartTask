# SmartTask Mobile Environment Variables
# Copy this file to .env and update the values for your environment

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080
EXPO_PUBLIC_WS_URL=ws://localhost:8080/ws

# App Environment
EXPO_PUBLIC_APP_ENV=development

# Network Configuration (for physical devices)
# Replace with your computer's IP address when testing on physical devices
# EXPO_PUBLIC_API_BASE_URL=http://192.168.1.100:8080
# EXPO_PUBLIC_WS_URL=ws://192.168.1.100:8080/ws

# Android Emulator Configuration
# EXPO_PUBLIC_API_BASE_URL=http://10.0.2.2:8080
# EXPO_PUBLIC_WS_URL=ws://10.0.2.2:8080/ws

# Production Configuration (for app store builds)
# EXPO_PUBLIC_API_BASE_URL=https://your-production-api.com
# EXPO_PUBLIC_WS_URL=wss://your-production-api.com/ws
# EXPO_PUBLIC_APP_ENV=production

# Optional: Debugging and Development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Optional: Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false
